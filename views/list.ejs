<%- include('header'); -%>
<div class="box">
  <h1 id="heading"><%=listTitle%></h1>
</div>

<div class="box">

  <%  newListItems.forEach(function(item){ %>
  <div class="item">
    <form action="/delete" method="post">
      <input type="hidden" name="listName" value="<%=listTitle%>">
      <button class="deleteItem" type="submit" name="toDelete" value="<%=item._id%>"><img class="deleteImg" src="images/bin.png" alt=""></button>
    </form>
    <input type="checkbox">

    <p><%=item.name%></p>

  </div>


  <%  }) %>

  <form class="item" action="/" method="post">
    <input name="listItem" type="text" placeholder="New Item" autocomplete="off" required>
    <button class="addItem" type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>
</div>
<%- include('footer'); -%>
